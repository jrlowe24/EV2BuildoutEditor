{
    "compilerOptions": {
        "target": "ES6",       
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
          ],           // Target JavaScript version (Node.js supports ES6)
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx"
      },
      "include": [
        "app/src/*.ts",                    // Include TypeScript source files
        "src/**/*.ts"
      ],
      "exclude": [
        "node_modules"                   // Exclude the node_modules directory
      ]
}